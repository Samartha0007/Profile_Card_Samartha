{
  "version": 2,
  "builds": [
    { "src": "profile.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { 
      "source": "/:username", 
      "destination": "/profile.js?username=:username" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ],
  "headers": [
    {
      "source": "/:username",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate" },
        { "key": "Content-Type", "value": "text/html" }
      ]
    }
  ]
}